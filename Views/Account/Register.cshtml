@model ApplicationUser

<h1>Sign Up</h1>
<br />
<form method="post" asp-action="ConfirmRegister" enctype="multipart/form-data">
    <div class="input-group flex-nowrap mb-3">
        <span class="input-group-text" id="addon-wrapping">@@</span>
        <input asp-for="UserName" type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="addon-wrapping">
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Email address</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="PhoneNumber" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Phone Number</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="PasswordHash" type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input name="ConfirmPassword" type="password" class="form-control" id="floatingPassword" placeholder="Confirm Password">
        <label for="floatingPassword">Confirm Password</label>
    </div>

    <div class="mb-3">
        <label for="ProfileImage">Upload Profile Image (optional):</label>
        <input type="file" name="ProfileImage" class="form-control" />
    </div>

    <select name="RoleId" class="form-control mb-3" asp-items="@(new SelectList(ViewBag.Roles, "Value", "Text"))">
        <option value="">--Select a Role--</option>
    </select>

    <button type="submit" class="btn btn-primary">Register</button>

    <a href="/account/login" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">I already have an account</a>
</form>
