@using System.IO
@using depi_real_state_management_system.Models
@model IEnumerable<Property>

<div class="row">
    @foreach (var property in Model)
    {
            <div class="col-md-3">
                <div class="card">
                    @*I can't write the condition*@
                    @if (true)
                    {
                        // Image exists
                            <img src="/images/@property.ImageUrl" class="card-img-top" alt="@property.Location" />
                    }
                    else
                    {
                        // Image does not exist
                            <img src="~/images/airbnb.jpg" class="card-img-top" alt="@property.Location" />
                    }

                    <div class="card-body">
                        <h5 class="card-title">@property.Location</h5>
                        <p class="card-text">Size: @property.Size</p>
                        <p class="card-text">Price: @property.Price ₤</p>
                        <p class="card-text">Description: @property.Description</p>
                        <p class="card-text">
                        @if (property.IsAvailable)
                        {
                                    <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                                    <span class="badge bg-danger">Unavailable</span>
                        }
                        </p>
                        <a href="@Url.Action("Details", "Property", new { id = property.PropertyID })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
    }
</div>
