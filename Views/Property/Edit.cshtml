@model Property

@{
    ViewData["Title"] = "Edit Property";
}

<h2>Edit Property</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePerNight" class="control-label"></label>
        <input asp-for="PricePerNight" class="form-control" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Size" class="control-label"></label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label"></label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="PropertyID" />

    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Profile", "Account", new { id = Model.OwnerId }, new { @class = "btn btn-secondary" })
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
