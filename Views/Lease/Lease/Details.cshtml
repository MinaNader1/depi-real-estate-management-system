@model depi_real_state_management_system.Models.Lease

@{
    ViewData["Title"] = "Lease Details";
}

<h1>Lease Details</h1>

<div>
    <h4>Property</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Location
        </dt>
        <dd class="col-sm-9">
            @Model.Property.Location
        </dd>
        <dt class="col-sm-3">
            Tenant
        </dt>
        <dd class="col-sm-9">
            @Model.Tenant.UserName
        </dd>
        <dt class="col-sm-3">
            Start Date
        </dt>
        <dd class="col-sm-9">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-3">
            End Date
        </dt>
        <dd class="col-sm-9">
            @Model.EndDate.ToShortDateString()
        </dd>
        <dt class="col-sm-3">
            Status
        </dt>
        <dd class="col-sm-9">
            @Model.Status
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
