@model IEnumerable<depi_real_state_management_system.Models.Lease>

@{
    ViewData["Title"] = "Leases";
}

<h1>Leases</h1>

<p>
    <a asp-action="CreateBooking" class="btn btn-primary">Create New Booking</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Property</th>
            <th>Tenant</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lease in Model)
        {
            <tr>
                <td>@lease.Property.Location</td>
                <td>@lease.Tenant.UserName</td>
                <td>@lease.StartDate.ToShortDateString()</td>
                <td>@lease.EndDate.ToShortDateString()</td>
                <td>@lease.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@lease.LeaseID" class="btn btn-info">Details</a>
                    <form asp-action="TerminateLease" asp-route-leaseId="@lease.LeaseID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to terminate this lease?');">Terminate</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
