@model depi_real_state_management_system.Models.Lease

<h2>Edit Lease</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="LeaseID" />
    <div class="form-group">
        <label asp-for="PropertyID"></label>
        <input asp-for="PropertyID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TenantID"></label>
        <input asp-for="TenantID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="RentAmount"></label>
        <input asp-for="RentAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PaymentFrequency"></label>
        <input asp-for="PaymentFrequency" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
