@model IEnumerable<depi_real_state_management_system.Models.Lease>

    <h2>Leases</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Property ID</th>
                <th>Tenant ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Rent Amount</th>
                <th>Payment Frequency</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lease in Model)
        {
            <tr>
                <td>@lease.PropertyID</td>
                <td>@lease.TenantID</td>
                <td>@lease.StartDate.ToShortDateString()</td>
                <td>@lease.EndDate.ToShortDateString()</td>
                <td>@lease.RentAmount</td>
                <td>@lease.PaymentFrequency</td>
                <td>@lease.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@lease.LeaseID" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Terminate" asp-route-id="@lease.LeaseID" class="btn btn-sm btn-danger">Terminate</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-success">Create New Lease</a>
