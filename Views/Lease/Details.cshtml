@model depi_real_state_management_system.Models.Lease

<h2>Lease Details</h2>

<div>
    <h4>Lease</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Property Location
        </dt>
        <dd class="col-sm-10">
            @Model.Property.Location
        </dd>

        <dt class="col-sm-2">
            Tenant Name
        </dt>
        <dd class="col-sm-10">
            @Model.Tenant.UserName
        </dd>

        <dt class="col-sm-2">
            Rent Amount
        </dt>
        <dd class="col-sm-10">
            @Model.TotalRentAmount
        </dd>

        <dt class="col-sm-2">
            Payment Frequency
        </dt>

        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>

        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </dd>

        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>

    @if (Model.Status == "Ongoing" && DateTime.Now < Model.StartDate.AddDays(-2))
    {
        <form asp-action="TerminateLease" method="post">
            <input type="hidden" name="leaseId" value="@Model.LeaseID" />
            <button type="submit" class="btn btn-danger">Terminate Lease</button>
        </form>
    }

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
