@model depi_real_state_management_system.Models.Lease

<h2>Terminate Lease</h2>

<h3>Are you sure you want to terminate this lease?</h3>
<div>
    <h4>Lease ID: @Model.LeaseID</h4>
    <p>Property ID: @Model.PropertyID</p>
    <p>Tenant ID: @Model.TenantID</p>
    <p>Start Date: @Model.StartDate.ToShortDateString()</p>
    <p>End Date: @Model.EndDate.ToShortDateString()</p>
</div>

<form asp-action="TerminateConfirmed">
    <input type="hidden" asp-for="LeaseID" />
    <button type="submit" class="btn btn-danger">Terminate</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
